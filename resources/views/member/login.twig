{% extends "layouts.base" %}
{% block title %}
    {{ trans('member.login') }}
{% endblock %}
{% block contents %}
<form role="form" method="POST" action="{{ url('/login') }}">
    {{ csrf_field() }}
    <div class="page-content page-content--centered">
        <header class="page-header">
            <h1 class="page-title">{{ trans('member.login') }}</h1>
        </header>
        <section class="form">
            <div class="form__section">
                <div class="form__row">
                    <h3 class="form__row__title"><label for="name">{{ trans('member.UsernameOrEmail') }}</label></h3>
                    <input type="text" name="name" id="name" value="{{ old('name') }}" required autofocus>
                </div>
                <div class="form__row">
                    <h3 class="form__row__title"><label for="password">{{ trans('member.password') }}</label></h3>
                    <p class="form__row__description"><a href="{{ url('password/reset') }}" data-modal="password/reset">{{ trans('member.forgotpassword') }}</a>
                    </p>
                    <input type="password" name="password" id="password" class="password-toggle" required>
                </div>
                <div class="form__row">
                    <p class="form__checkbox">
                        <input type="checkbox" name="remember_me" id="remember_me" {{ old('remember_me') ? 'checked' : ''}}>
                        <label for="remember_me">{{ trans('member.remember_me') }}</label>
                    </p>
                </div>
            </div>
        </section>
        <input type="hidden" name="url" value="{{ input_get('url') }}">
        <div class="form__submit">
            <button type="submit" class="button icon fa-sign-in">
                {{ trans('member.login') }}
            </button>
        </div>
    </div>
</form>
{% endblock %}
